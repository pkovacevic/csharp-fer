@model StudentVm

@if (ViewContext.ViewData.ModelState.IsValid == false)
{
    <div class="panel panel-danger">
        <div class="panel-heading">
            There were some input errors.
        </div>
        <div class="panel-body">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
}
<div class="form-group">
    <label asp-for="FirstName"></label>
    <input class="form-control" asp-for="FirstName" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LastName"></label>
    <input class="form-control" asp-for="LastName" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="StudentCode"></label>
    <input class="form-control" asp-for="StudentCode" />
    <span asp-validation-for="StudentCode" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="GenderValue"></label>
    <select class="form-control" asp-for="GenderValue" asp-items="@Model.GenderOptions"></select>
    <span asp-validation-for="GenderValue" class="text-danger"></span>
</div>